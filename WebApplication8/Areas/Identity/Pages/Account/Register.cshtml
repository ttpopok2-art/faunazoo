@page
@model WebApplication8.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div style="display:flex; justify-content:center; align-items:center; min-height:100vh;">
    <div style="width:100%; max-width:400px; background:white; padding:30px; border-radius:12px; box-shadow:0 5px 15px rgba(0,0,0,0.1);">
        <h2 style="text-align:center; color:#4361ee; margin-bottom:20px;">Создать аккаунт</h2>

        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="example@mail.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Пароль</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Минимум 6 символов" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
        </form>

        <p class="text-center mt-3">
            Уже есть аккаунт? <a asp-area="Identity" asp-page="/Account/Login">Войти</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
