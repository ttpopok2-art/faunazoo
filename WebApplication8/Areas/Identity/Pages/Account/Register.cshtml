@page
@model WebApplication8.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div style="display:flex; justify-content:center; align-items:center; min-height:100vh; background: linear-gradient(135deg,#f5f7fa,#e4e9f2);">
    <div style="width:100%; max-width:400px; background:white; border-radius:12px; box-shadow:0 10px 30px rgba(0,0,0,0.08); padding:30px;">
        <h2 style="text-align:center; color:#4361ee; margin-bottom:20px;">Создать аккаунт</h2>

        <form method="post">
            @Html.AntiForgeryToken() <!-- Обязательно для защиты CSRF -->

            <div asp-validation-summary="All" style="color:#f72585; margin-bottom:15px;"></div>

            <div style="margin-bottom:15px;">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" style="width:100%; padding:10px; border-radius:8px; border:1px solid #e9ecef;" placeholder="example@mail.com" />
                <span asp-validation-for="Input.Email" style="color:#f72585; font-size:13px;"></span>
            </div>

            <div style="margin-bottom:15px;">
                <label>Пароль</label>
                <input asp-for="Input.Password" type="password" class="form-control" style="width:100%; padding:10px; border-radius:8px; border:1px solid #e9ecef;" placeholder="Минимум 6 символов" />
                <span asp-validation-for="Input.Password" style="color:#f72585; font-size:13px;"></span>
            </div>

            <div style="margin-bottom:20px;">
                <label>Подтверждение пароля</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" style="width:100%; padding:10px; border-radius:8px; border:1px solid #e9ecef;" placeholder="Повторите пароль" />
                <span asp-validation-for="Input.ConfirmPassword" style="color:#f72585; font-size:13px;"></span>
            </div>

            <button type="submit" style="width:100%; padding:12px; background:#4361ee; color:white; border:none; border-radius:8px; font-weight:600; cursor:pointer;">Зарегистрироваться</button>
        </form>

        <p style="text-align:center; margin-top:15px; font-size:14px;">
            Уже есть аккаунт? <a asp-area="Identity" asp-page="/Account/Login" style="color:#4361ee; text-decoration:none;">Войти</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
