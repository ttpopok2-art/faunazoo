@model WebApplication8.Models.Tickets
@{
    ViewData["Title"] = "Удалить билет";
}

<div style="max-width:500px;margin:60px auto;background:white;padding:30px;border-radius:10px;text-align:center;box-shadow:0 4px 10px rgba(0,0,0,0.1);">
    <h2 style="color:#c0392b;">Удалить билет</h2>
    <p>Вы уверены, что хотите удалить билет <strong>@Model.Ticket_type</strong>?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="Ticket_ID" value="@Model.Ticket_ID" />
        <button type="submit" style="background:#e74c3c;color:white;border:none;padding:8px 16px;border-radius:6px;margin-right:10px;">Удалить</button>
        <a href="/Tickets/Index?role=admin" style="text-decoration:none;color:#333;">Отмена</a>
    </form>
</div>
