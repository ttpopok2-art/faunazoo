@model WebApplication8.Models.Tickets
@{
    ViewData["Title"] = "Добавить билет";
}

<div style="max-width:500px;margin:40px auto;background:white;padding:25px;border-radius:10px;box-shadow:0 4px 8px rgba(0,0,0,0.1);">
    <h2 style="text-align:center;color:#2c3e50;">Добавить билет</h2>

    <form asp-action="Create" method="post" style="display:flex;flex-direction:column;gap:12px;">
        <label>Тип билета</label>
        <input type="text" name="Ticket_type" required />

        <label>Цена</label>
        <input type="number" step="0.01" name="Price" required />

        <label>Посетитель</label>
        <select name="Visitor_ID" required>
            @foreach (var v in ViewBag.Visitors)
            {
                <option value="@v.Visitor_ID">@v.Full_name</option>
            }
        </select>

        <button type="submit" style="background:#27ae60;color:white;padding:10px;border:none;border-radius:6px;">💾 Сохранить</button>
        <a href="/Tickets/Index?role=admin" style="text-align:center;margin-top:10px;">Отмена</a>
    </form>
</div>
