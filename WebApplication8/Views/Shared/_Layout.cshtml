@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Зоопарк «Фауна»</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background: #f5f6fa;
            color: #222;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .topbar {
            background: #2c3e50;
            color: white;
            padding: 12px 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        }

            .topbar a {
                color: white;
                margin: 0 10px;
                text-decoration: none;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .topbar a:hover {
                    color: #3498db;
                }

            .topbar .nav-left {
                display: flex;
            }

            .topbar .nav-right {
                display: flex;
                align-items: center;
                gap: 15px;
            }

        .auth-links {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .auth-btn {
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-block;
        }

        .login-btn {
            background: transparent;
            color: white;
            border: 1px solid white;
        }

            .login-btn:hover {
                background: white;
                color: #2c3e50;
            }

        .register-btn {
            background: #27ae60;
            color: white;
            border: 1px solid #27ae60;
        }

            .register-btn:hover {
                background: #2ecc71;
                border-color: #2ecc71;
            }

        .container {
            flex: 1;
            max-width: 1100px;
            margin: 30px auto;
            padding: 0 16px;
        }

        .footer {
            text-align: center;
            padding: 14px 0;
            color: #666;
            background: #fff;
            border-top: 1px solid #ddd;
        }

        .btn-link {
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            font: inherit;
            padding: 0 10px;
            text-decoration: underline;
        }

        .user-greeting {
            color: white;
            margin-right: 15px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Навигация -->
    <div class="topbar">
        <div class="nav-left">
            <a href="/">Главная</a>
            <a href="/Animals/Index">Животные</a>
            <a href="/Species/Index">Виды</a>
            <a href="/Enclosures/Index">Вольеры</a>
            <a href="/Employees/Index">Сотрудники</a>
            <a href="/Tickets/Index">Билеты</a>
        </div>

        <div class="nav-right">
            @if (SignInManager.IsSignedIn(User))
            {
                <span class="user-greeting">Привет, @User.Identity?.Name!</span>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                    <button type="submit" class="btn-link">Выйти</button>
                </form>
            }
            else
            {
                <div class="auth-links">
                    <a class="auth-btn login-btn" href="/Identity/Account/Login">Войти</a>
                    <a class="auth-btn register-btn" href="/Identity/Account/Register">Зарегистрироваться</a>
                </div>
            }
        </div>
    </div>

    <!-- Контент -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Футер -->
    <div class="footer">
        © 2025 Зоопарк «Фауна»
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>